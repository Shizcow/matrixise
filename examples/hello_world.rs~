use super::*;
use ncurses::{COLOR_PAIR, init_pair};
use ncurses::constants::*;
static COLOR_PAIR_BACKGROUND: i16 = 1;

fn main() {
    init_pair(COLOR_PAIR_BACKGROUND, COLOR_BLACK, COLOR_BLACK);
    let screen = Scene::new_auto(0, COLOR_PAIR(COLOR_PAIR_BACKGROUND), false);
    screen.init();
    screen.kill();
}
